generator client {
  provider = "prisma-client"
  engineType = "binary"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id String @id @default(uuid())
  email String @unique
  password String
  role Role
  events Event[]
  createdAt DateTime @default(now())
}

enum Role{
  ADMIN
  ORGANIZER
  CUSTOMER
  STAFF
}

model Event {
  id String @id @default(uuid())
  title String
  description String?
  venue String
  city String
  startTime DateTime
  endTime DateTime
  totalSeats Int
  availableSeats Int
  orgenizerID String
  organizer User @relation(fields: [orgenizerID], references: [id], onDelete: Cascade)
  ticketCategories TicketCategory[]
  status EventStaus @default(DRAFT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum EventStaus {
  DRAFT
  PUBLISHED
  CANCELLED
  COMPLETED
}

model TicketCategory{
  id String @id @default(uuid())
  name String
  description String?

  price Int
  totalSeats Int
  availableSeats Int

  eventID String
  event Event @relation(fields: [eventID], references: [id])
}

model Order{
  id String @id @default(uuid())
  userID String
  eventID String

  amount Int
  currency String @default("INR")
  status OrderStatus @default(PENDING)
  payementRef String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

}

enum OrderStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model Ticket {
  id String @id @default(uuid())
  ticketCode String @unique
  eventId String
  orderId String
  categoryId String
  status TicketStatus @default(ACTIVE)
  checkedInAt DateTime?
  createdAt DateTime @default(now())
}

enum TicketStatus{
  ACTIVE
  USED
  CANCELLED
}